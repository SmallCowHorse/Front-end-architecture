{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": [
        "es2015",
        "es2015.promise",
        "es2017.object"
      ],
      "outDir": "./output",
      "sourceMap": true,
      "strict": true,
      "isolatedModules": false,
      "experimentalDecorators": true,
      // 加上源数据
      "emitDecoratorMetadata": true,
      "noImplicitAny": false,
      "noImplicitReturns": true,
      "removeComments": true,
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true,
      "allowUnreachableCode": true,
      "allowUnusedLabels": true,
      "allowJs": true,
      "listFiles": true,
      "baseUrl": "."
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/types/*"
    ],
    "compileOnSave": false
  }